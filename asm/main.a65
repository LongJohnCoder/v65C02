.PC02

.INCLUDE    "conio.inc"
.INCLUDE    "memory.inc"
.INCLUDE    "vga.inc"

.EXPORT     main

.DEFINE     VERSION "0.0"


;= MAIN PROGRAM ================================================================

.SEGMENT "bios"

main:       jsr     vga_init            ; initialize the VGA
            
            ldx     #.HIBYTE(bios_msg)
            ldy     #.LOBYTE(bios_msg)
            jsr     puts                ; print BIOS header
            
            ldx     #0
            ldy     #1
            jsr     gotoxy              ; move cursor to (0,1)
            
            ldx     #.HIBYTE(copyright)
            ldy     #.LOBYTE(copyright)
            jsr     puts                ; print copyright
            
            ldx     #0
            ldy     #2
            jsr     gotoxy              ; move cursor to (0,2)
            
            jsr     cursor_on
            
            ; Display 76543210 on the seven-segment display
            lda     #$00
            sta     SSEG_0
            
            lda     #$01
            sta     SSEG_1
            
            lda     #$02
            sta     SSEG_2
            
            lda     #$03
            sta     SSEG_3
            
            lda     #$04
            sta     SSEG_4
            
            lda     #$05
            sta     SSEG_5
            
            lda     #$06
            sta     SSEG_6
            
            lda     #$07
            sta     SSEG_7
            
            lda     #$FF
            sta     SSEG_DIGITS
            
@done:      jmp     @done


;= STRINGS =====================================================================

bios_msg:   .ASCIIZ "v65C02 BIOS v", VERSION
copyright:  .ASCIIZ "Copyright (C) 2018 Ryan Clarke"
